<form method='post' action ='<%= planet_path(@planet.id) %>' >
  <label> name </label>
  <input value=<%= @planet.name %> type='text' name='planet[name]' autofocus>
  <label> image </label>
  <input value=<%= @planet.image %> type='text' name='planet[image]' >
  <label> orbit </label>
  <input value=<%= @planet.orbit %> type='integer' name='planet[orbit]' >
  <label> diameter </label>
  <input value=<%= @planet.diameter %> type='integer' name='planet[diameter]' >
  <label> mass </label>
  <input value=<%= @planet.mass %> type='integer' name='planet[mass]' >
  <label> moons </label>
  <input value=<%= @planet.moons %> type='integer' name='planet[moons]'>
  <button>Planet</planet>
</form>