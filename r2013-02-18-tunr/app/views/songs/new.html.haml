.row
  .five.columns
    = render(:partial => 'shared/errors', :locals => {:object => @song})
    = form_for @song do |f|
      = f.label :name
      = f.text_field :name, :autofocus => true
      = f.label :image
      = f.text_field :image
      <br>
      %h3 Add genres to a song
      - Genre.all.each do |genre|
        %span= genre.name
        = check_box_tag 'song[genre_ids][]', genre.id, genre.in?(@song.genres.to_a)
      <br>
      = f.submit nil, :class => 'button radius'
  .seven.columns